<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>
<body>
    <div class="container">
        <h1 class="center-align">{{title}}</h1>
        <div class="top-right-btn">
            <a href="/classes" class="btn waves-effect waves-light">Назад к редактированию посещаемости</a>
        </div>
        <div class="input-field col s12">
            <select id="class-select">
                <option value="" disabled selected>Выберите класс</option>
                {{#each classes}}
                    <option value="{{this.id}}" {{#if (eq this.id ../selectedClassId)}}selected{{/if}}>{{this.name}}</option>
                {{/each}}
            </select>
            <label>Класс</label>
        </div>
        <table class="highlight">
            <thead>
                <tr>
                    <th>Название класса</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Тип</th>
                    <th>Дата начала</th>
                    <th>Дата окончания</th>
                    <th>Комментарий</th>
                    <th>Действия</th> <!-- Новая колонка для кнопок действий -->
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{this.class_name}}</td>
                    <td>{{this.firstname}}</td>
                    <td>{{this.lastname}}</td>
                    <td>{{this.type}}</td>
                    <td>{{this.date_from}}</td>
                    <td>{{this.date_to}}</td>
                    <td>{{this.comment}}</td>
                    <td>
                        <button class="btn waves-effect waves-light red delete-btn" data-user-id="{{this.user_id}}" data-attendance-id="{{this.attendance_id}}">Удалить</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function(){
            $('select').formSelect();

            $('#class-select').change(function() {
                var classId = $(this).val();
                if (classId) {
                    window.location.href = '/classes/table?classId=' + classId;
                } else {
                    window.location.href = '/classes/table';
                }
            });

            // Устанавливаем выбранное значение
            $('#class-select').val('{{selectedClassId}}');
            $('select').formSelect();

            // Обработчик клика на кнопку удаления
            $(document).on('click', '.delete-btn', function() {
                var userId = $(this).data('user-id');
                var attendanceId = $(this).data('attendance-id');

                if (confirm('Вы уверены, что хотите удалить запись о посещаемости?')) {
                    $.ajax({
                        url: '/classes/delete-attendance',
                        method: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ attendanceId }),
                        success: function(response) {
                            console.log('Delete response:', response);
                            // Обновляем страницу после успешного удаления
                            location.reload();
                        },
                        error: function(error) {
                            console.error('Error:', error);
                            alert('Ошибка при удалении записи о посещаемости');
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>
